<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagamento</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="registration-form">        
            <form>
                <div class="form-icon">
                    <span>SUE</span>
                </div>
                <center><h3>Pagamento</h3></center>
                <div class="form-group">
                    <label for="valor">Valor:</label>
                    <input type="number" class="form-control item" id="valor" min="1" step="3000" />
                </div>
                <div class="form-group">
                    <label for="data">Data de Pagamento:</label>
                    <input type="date" class="form-control item" id="data">
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição:</label>
                    <textarea id="descricao" class="form-control item" name="descricao" rows="4" cols="50" placeholder="Digite a descrição!"></textarea>
                </div>
                <div class="form-group">
                    <label for="desconto">Desconto:</label>
                    <input type="text" class="form-control item" id="desconto" placeholder="Digite o código de desconto.">
                </div>
                <div class="form-group">
                    <label for="parcela">Parcela:</label>
                    <input type="number" class="form-control item" id="parcela" min="0" step="any" />
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-block create-account">Salvar</button>
                </div>
            </form>        
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $('#valor').mask('000.000.000.000.000,00', {reverse: true});
            $('#data').mask('00/00/0000');
        });
    </script>
</body>
</html>
